<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <!-- أذونات أساسية -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- دعم جميع أحجام الشاشات والكثافات -->
    <supports-screens 
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/OneUITheme"
        tools:targetApi="31">
        
        <!-- النشاط الرئيسي مع تكوين One UI -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            
            <!-- Intent filter للشاشة الرئيسية -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- دعم Android Auto إذا أردت إضافته لاحقاً -->
            <meta-data android:name="distractionOptimized" android:value="true"/>
        </activity>

        <!-- تكوين خاص بـ Samsung One UI -->
        <meta-data
            android:name="SEM_DIRECTSHARE_ENABLED"
            android:value="true" />
            
        <!-- دعم Samsung DeX mode -->
        <meta-data
            android:name="samsung.android.keepalive.density"
            android:value="true" />
            
        <!-- تحسينات Samsung Edge Panel -->
        <meta-data
            android:name="com.samsung.android.cocktail.mode"
            android:value="true" />

    </application>

</manifest>
