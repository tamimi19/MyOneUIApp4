<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ثيم OneUI الأساسي المحسن -->
    <style name="OneUITheme" parent="Theme.OneUI.Light">
        <!-- ألوان OneUI الأساسية -->
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryVariant">#1565C0</item>
        <item name="colorAccent">#1976D2</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- ألوان الخلفية والأسطح -->
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorBackground">#FAFAFA</item>
        <item name="colorOnSurface">#212121</item>
        <item name="colorOnBackground">#212121</item>
        
        <!-- ألوان النصوص -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:textColorHint">#9E9E9E</item>
        
        <!-- تخصيص الأزرار -->
        <item name="buttonStyle">@style/OneUI.Button</item>
        <item name="android:buttonStyle">@style/OneUI.Button</item>
        
        <!-- تخصيص شريط الأدوات -->
        <item name="toolbarStyle">@style/OneUI.Toolbar</item>
        <item name="actionBarStyle">@style/OneUI.ActionBar</item>
        
        <!-- تخصيص النصوص -->
        <item name="android:textAppearanceLarge">@style/OneUI.TextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/OneUI.TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/OneUI.TextAppearance.Small</item>
        
        <!-- خصائص النوافذ -->
        <item name="android:windowBackground">@color/oneui_background</item>
        <item name="android:statusBarColor">@color/oneui_primary_variant</item>
        <item name="android:navigationBarColor">@color/oneui_surface</item>
    </style>

    <!-- أنماط الأزرار المحسنة -->
    <style name="OneUI.Button" parent="Widget.OneUI.Button">
        <item name="android:background">@drawable/oneui_button_background</item>
        <item name="android:textColor">@color/oneui_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- أنماط شريط الأدوات -->
    <style name="OneUI.Toolbar" parent="Widget.OneUI.Toolbar">
        <item name="android:background">@color/oneui_primary</item>
        <item name="titleTextColor">@color/oneui_on_primary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="OneUI.ActionBar" parent="Widget.OneUI.ActionBar">
        <item name="android:background">@color/oneui_primary</item>
        <item name="titleTextStyle">@style/OneUI.ActionBar.Title</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="OneUI.ActionBar.Title" parent="TextAppearance.OneUI.Widget.ActionBar.Title">
        <item name="android:textColor">@color/oneui_on_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- أنماط النصوص -->
    <style name="OneUI.TextAppearance.Large" parent="TextAppearance.OneUI.Headline4">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/oneui_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OneUI.TextAppearance.Medium" parent="TextAppearance.OneUI.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/oneui_text_primary</item>
    </style>

    <style name="OneUI.TextAppearance.Small" parent="TextAppearance.OneUI.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/oneui_text_secondary</item>
    </style>

    <!-- الثيم الداكن -->
    <style name="OneUITheme.Dark" parent="Theme.OneUI.Dark">
        <!-- ألوان OneUI الداكنة -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorAccent">#2196F3</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- ألوان الخلفية الداكنة -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorBackground">#121212</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnBackground">#FFFFFF</item>
        
        <!-- ألوان النصوص الداكنة -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        
        <!-- خصائص النوافذ الداكنة -->
        <item name="android:windowBackground">@color/oneui_background_dark</item>
        <item name="android:statusBarColor">@color/oneui_surface_dark</item>
        <item name="android:navigationBarColor">@color/oneui_surface_dark</item>
    </style>

    <!-- أنماط إضافية للمكونات المخصصة -->
    <style name="OneUI.CardView" parent="Widget.OneUI.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/oneui_surface</item>
    </style>

    <style name="OneUI.FloatingActionButton" parent="Widget.OneUI.FloatingActionButton">
        <item name="backgroundTint">@color/oneui_accent</item>
        <item name="tint">@color/oneui_on_accent</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- أنماط للتخطيطات -->
    <style name="OneUI.LinearLayout.Vertical">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
        <item name="android:background">@color/oneui_background</item>
    </style>

    <style name="OneUI.LinearLayout.Horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
