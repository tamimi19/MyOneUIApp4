<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- شريط أدوات بسيط -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تطبيق OneUI"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- منطقة المحتوى الرئيسي -->
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- المحتوى الافتراضي -->
        <ScrollView
            android:id="@+id/home_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcome_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="مرحباً بك في تطبيق OneUI"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/welcome_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:lineSpacingExtra="4dp"
                    android:text="تطبيق محسن باستخدام مكتبات Samsung OneUI مع ميزات متقدمة للتنقل والتفاعل"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="16sp"
                    android:gravity="center" />

                <!-- أزرار التنقل -->
                <Button
                    android:id="@+id/btn_scroll_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="📋 قائمة التمرير\nعرض 200 عنصر مع تمرير محسن"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="?attr/colorPrimary" />

                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="⚙️ الإعدادات\nتخصيص واجهة التطبيق"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="?attr/colorPrimary" />

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="🏠 الرئيسية\nالعودة للشاشة الرئيسية"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="?attr/colorPrimary"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle" />

                <!-- معلومات التطبيق -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ميزات التطبيق:"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="6dp"
                    android:text="• واجهة مستخدم محسنة بتقنية Samsung OneUI\n• قائمة تمرير متقدمة مع 200 عنصر\n• إعدادات شاملة للتخصيص\n• تسجيل تلقائي للأخطاء\n• تصميم متجاوب يدعم جميع أحجام الشاشات\n• دعم كامل لأجهزة Samsung وغير Samsung"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="16sp" />

                <!-- زر إضافي للاختبار -->
                <Button
                    android:id="@+id/btn_test_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="اختبار الميزات المتقدمة"
                    android:textColor="@android:color/white"
                    android:background="?attr/colorAccent"
                    android:textAllCaps="false" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>
